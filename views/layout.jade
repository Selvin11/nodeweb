doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title #{title}
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    style body{padding-top:70px;}
  body
    nav.navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') nodeweb
        
        .collapse.navbar-collapse#bs-example-navbar-collapse-1
          ul.nav.navbar-nav
            li.active
              a(href='/') 首页
            //-注意缩进
            - if (!user)
              li
                a(href='/login') 登录
              li
                a(href='/reg') 注册
            - else
              li
                a(href='/logout') 退出

    #container.container
      if success
        .alert.alert-success.alert-dismissible(role='alert',data-dismiss='alert')
          button.close(type='button',,data-dismiss='alert',aria-label='close')
            span(aira-hidden='true') &times;
          strong #{success}  
      else if error
        .alert.alert-danger.alert-dismissible(role='alert',data-dismiss='alert')
          button.close(type='button',,data-dismiss='alert',aria-label='close')
            span(aira-hidden='true') &times;
          strong #{error}
      block content
      hr
      footer
        p
          a(href='http://selvinpro.com', target='_blank') Selvin&copy;2015-2016
    script(src='/javascripts/jquery.js')
    script(src='/javascripts/bootstrap.js')
    script(src='/javascripts/gsw.js')
